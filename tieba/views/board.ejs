<%- include('layout', { title: board.name }) %>

<section>
  <h2><%= board.name %></h2>
  <p><a class="btn" href="/board/<%= board.id %>/new">发新帖</a></p>
  <ul class="threads">
    <% board.threads.forEach(function(t){ %>
      <li>
        <a href="/thread/<%= t.id %>"><strong><%= t.title %></strong></a>
        <div class="meta">发帖：<%= t.author %> • <%= new Date(t.createdAt).toLocaleString() %> • 回复 <%= t.replies.length %></div>
      </li>
    <% }) %>
  </ul>
</section>
