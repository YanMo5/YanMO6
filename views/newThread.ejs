<%- include('layout', { title: '发新帖 - ' + board.name }) %>

<section>
  <h2>在《<%= board.name %>》发新帖</h2>
  <form method="post" action="/board/<%= board.id %>/new">
    <p><input type="text" name="title" placeholder="标题"></p>
    <p><input type="text" name="author" placeholder="称呼（可选）"></p>
    <p><textarea name="content" rows="6" placeholder="正文"></textarea></p>
    <p><button type="submit">发布</button></p>
  </form>
</section>
